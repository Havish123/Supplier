      <div class="form-group  row">
            <div class="col-2">
                <label asp-for="product.Name"></label>
            </div>
            <div class="col-4">
                <input disabled asp-for="product.Name"  class="form-control"></input>
                <span asp-validation-for="product.Name" class="text-danger"></span>
