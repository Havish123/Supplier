@model IEnumerable<SupplierMVC.Models.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Product Details</h1>


<div class="row justify-content-between">
    <div class="col-4">
        <p>
            <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-plus"></i> Create New</a>
        </p>
    </div>
    <div class="col-4">
        <div class="input-group ">
           <form asp-controller="Product" asp-action="Index">
                <div  class="d-flex">
                    <input type="text" name="SearchString" class="form-control me-2" placeholder="Search Products" aria-label="Search Products" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary d-flex" type="submit" id="button-addon2">Filter </button>
                </div>
           </form>
        </div>
    </div>
  </div>
<div class="table-responsive">
    <table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.product.product_Id)</th>
            <th>@Html.DisplayNameFor(model => model.product.product_Name)</th>
            <th>@Html.DisplayNameFor(model => model.product.product_price)</th>
            @if(true)
            {}
            <th>@Html.DisplayNameFor(model => model.product.inventory.stock_product_quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.Brand.BrandName)</th>
            @if(true)
            {}
            <th>@Html.DisplayNameFor(model => model.Supplier.supplierName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>@Html.DisplayFor(model => item.product.product_Id)</td>
            <td>@Html.DisplayFor(model => item.product.product_Name)</td>
            <td>@Html.DisplayFor(model => item.product.product_price)</td>
            <td>@Html.DisplayFor(model => item.product.inventory.stock_product_quantity)</td>
            <td>@Html.DisplayFor(model => item.Category.CategoryName)</td>
            <td>@Html.DisplayFor(model => item.Brand.BrandName)</td>
            <td>@Html.DisplayFor(model => item.Supplier.supplierName)</td>
           <partial name="_TableButtonPartial" model="item.product.product_Id" />
        </tr>
}
    </tbody>
</table>
</div>

