@model SupplierMVC.Models.ProductCreateModel


@using SupplierMVC.Extensions
@{
    ViewData["Title"] = "Create";
}


<h2 class="text-success "> Add New Product</h2>

<form method="post" enctype="multipart/form-data" action="Create">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

     <div class="form-group row">
        <div class="col-2">
            <label asp-for="productData.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="productData.Name"  class="form-control"></input>
            <span asp-validation-for="productData.Name" class="text-danger"></span>
        </div></div>
    <br />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="categories"></label>
        </div>
        <div class="col-4">
            @*asp-items="Model.Makes.ToSelectedListItem<Make>()"*@
            <select asp-for="productData.Id" asp-items="Model.categories.ToSelectedListItem<CategoryData>()" id="Category" class="form-control"></select>
            <span asp-validation-for="productData.Id" class="text-danger"></span>
            </div>
        </div>
    <br />

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="brands"></label>
        </div>
        <div class="col-4">
            <select asp-for="productData.Id" asp-items="Model.brands.ToSelectedListItem<BrandData>()" id="BrandData" class="form-control"></select>
            <span asp-validation-for="productData.Id" class="text-danger"></span>
            </div></div>
    <br />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="suppliers"></label>
        </div>
        <div class="col-4">
            <select asp-for="productData.Id" asp-items="Model.suppliers.ToSelectedListItem<SupplierData>()" id="SupplierData" class="form-control"></select>
            <span asp-validation-for="productData.Id" class="text-danger"></span>
            </div></div>
    <br />

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="productData.product_price"></label>
        </div>
        <div class="col-4">
            <input asp-for="productData.product_price"  class="form-control"></input>
            <span asp-validation-for="productData.product_price" class="text-danger"></span>
        </div></div>
    <br />

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="productData.inventory.stock_product_quantity"></label>
        </div>
        <div class="col-4">
            <input asp-for="productData.inventory.stock_product_quantity"  class="form-control"></input>
            <span asp-validation-for="productData.inventory.stock_product_quantity" class="text-danger"></span>
        </div></div>
    <br />

    
    <br /><br />
    <div class="form-group">
        <input type="submit" class="btn btn-dark" value="Create" />
        
    </div>
</form>
<br/>
<div>
    <a class="btn btn-primary" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
